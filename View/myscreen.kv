<MyField@MDTextFieldRect>
    size_hint: None, None
    size: "100dp", "32dp"
    input_filter: "float"
    pos_hint: {"center_y": .5}


<MyScreenView>
    MDBoxLayout:
        orientation: "vertical"
        MDTabs:
            id: tabs
            on_tab_switch: root.on_tab_switch(*args)
            height: "48dp"
            tab_indicator_anim: False
            background_color: 0.1, 0.1, 0.1, 1

            Tab:
                id: tab1
                name: 'tab1'
                text: f"PI"

                MDBoxLayout:
                    orientation: 'vertical'

                    MDLabel:
                        text: "Control object:"
                        font_style: "H6"
                        pos_hint: {"center_x": .5,"center_y": .5}
                        adaptive_size: True

                    MDBoxLayout:
                        adaptive_size: True
                        spacing: "12dp"

                        MyField:
                            id: gain
                            # Bind the edit completion event to the controller method.
                            on_focus: root.set_gain(self.focus, float(self.text or 0))
                            hint_text: "Process gain"

                        MyField:
                            id: tau
                            # Bind the edit completion event to the controller method.
                            on_focus: root.set_tau(self.focus, float(self.text or 1))
                            hint_text: "Tau"

                        MyField:
                            id: dt
                            # Bind the edit completion event to the controller method.
                            on_focus: root.set_dt(self.focus, float(self.text or 1))
                            hint_text: "Dead time"

                    MDLabel:
                        text: "Cohen-Coon calculation:"
                        font_style: "H6"
                        pos_hint: {"center_x": .5}
                        adaptive_size: True

                    MDBoxLayout:
                        adaptive_size: True
                        spacing: "12dp"

                        MyField:
                            id: pp

                        MyField:
                            id: ii

                    MDBoxLayout:
                        adaptive_size: True
                        spacing: "12dp"

                        MyField:
                            id: p

                        MyField:
                            id: i

                        MyField:
                            id: d

                    ScrollView:
                        AnchorLayout:
                            id: calc_pi_table
            Tab:
                id: tab2
                name: 'tab2'
                text: f"PID"

                ScrollView:
                    AnchorLayout:
                        id: calc_pid_table